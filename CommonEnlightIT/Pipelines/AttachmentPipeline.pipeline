                        <con1:expr>
                            <con2:xqueryText>fn:data(fn-bea:execute-sql('jdbc/mis_filesDSNonXA',xs:QName('ATTACHMENT'),
'Select Base64Encode(Doc_Content) as Doc_Content From Com6_Documents Where ID_Document=?',
xs:unsignedLong($inbound/ctx:transport/ctx:request/http:query-parameters/http:parameter[@name="attachmentDocumentId"]/@value)
)//*:DOC_CONTENT)</con2:xqueryText>
                        </con1:expr>
