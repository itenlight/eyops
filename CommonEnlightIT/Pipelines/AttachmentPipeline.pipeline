                <con:context/>
                <con:actions>
                    <con1:javaCallout varName="vDocument">
                        <con2:id>_ActionId-7f000101.N30dc5fc6.0.18eb9a5e923.N7dc6</con2:id>
                        <con1:archive ref="CommonEnlightIT/Resources/EnlightIT"/>
                        <con1:className>org.eyops.utils.Base64Utilities</con1:className>
                        <con1:method>public static [B base64ToByte(java.lang.String)</con1:method>
                        <con1:expr>
                            <con2:xqueryText>xs:base64Binary($DocContent)</con2:xqueryText>
                        </con1:expr>
                        <con1:return-param-as-ref>false</con1:return-param-as-ref>
                    </con1:javaCallout>
                    <con1:replace varName="body" contents-only="true">
                        <con2:id>_ActionId-7f000101.N30dc5fc6.0.18eb9a5e923.N7dc3</con2:id>
                        <con1:expr>
                            <con2:xqueryText>$vDocument</con2:xqueryText>
                        </con1:expr>
                    </con1:replace>
                    <con1:transport-headers>
                        <con2:id>_ActionId-7f000101.N30dc5fc6.0.18eb9a5e923.N7dc0</con2:id>
                        <con1:header-set>inbound-response</con1:header-set>
                        <con1:header value="expression" name="Content-Disposition">
                            <con2:xqueryText>fn:concat('attachment; filename="',urnVU:UrlEncode($filename, 'utf-8'),'"')</con2:xqueryText>
                        </con1:header>
                    </con1:transport-headers>
                </con:actions>
            </con:stage>
            <con:stage id="_StageId-7f000101.N30dc5fc6.0.18eb9a5e923.N7f37" name="Output Stage">
                <con:context/>
                <con:disabled>true</con:disabled>
                <con:actions>
                    <con1:insert varName="attachments">
                        <con2:id>_ActionId-7f000101.N30dc5fc6.0.18eb9a5e923.N7f2b</con2:id>
                        <con1:where>first-child</con1:where>
                        <con1:expr>
                            <con2:xqueryText><![CDATA[<ctx:attachment>
 <ctx:Content-Type>{fn:concat('application/octet-stream; name="',urnVU:UrlEncode($vFilename, 'UTF-8'),'"')}</ctx:Content-Type>
 <ctx:Content-Transfer-Encoding>base64</ctx:Content-Transfer-Encoding>
 <ctx:Content-Disposition>{fn:concat('attachment; filename="',urnVU:UrlEncode($vFilename, 'UTF-8'),'"')}</ctx:Content-Disposition>
 <ctx:body>{$vDocContent}</ctx:body>
</ctx:attachment>]]></con2:xqueryText>
                        </con1:expr>
                    </con1:insert>
                </con:actions>
            </con:stage>
